              {
                "key": "field_services_list",
                "label": "Select Services",
                "name": "services",
                "type": "relationship",
                "post_type": ["service"],
                "filters": ["search"],
                "return_format": "object",
                "max": 6
              }
            ]
          },
          "layout_specials": {
            "key": "layout_specials",
            "name": "monthly_specials",
